# Description: XML parser
# URL: http://expat.sourceforge.net

name=expat
version=2.1.0
release=1
source=(http://heanet.dl.sourceforge.net/project/expat/expat/$version/$name-$version.tar.gz)

build() {
   cd $name-$version

   ./configure --prefix=/usr \
               --build=$BUILD \
               --host=$HOST

   make -j $JOBS
   make DESTDIR=$PKG install

   # Fix libtool files
   fix_la_files $PKG
}

