# Description: Library giving userland programs access to USB devices
# URL: http://libusb.info
# License: LGPLv2.1

name=libusb
version=1.0.21
release=1
source=(https://github.com/$name/$name/releases/download/v${version}/$name-$version.tar.bz2)
depends=systemd

build () {
   cd $name-$version
  
   ./configure --build=$BUILD \
               --host=$HOST \
               --prefix=/usr \
               --disable-static

   # Use only one build thread to avoid build bug in libusb 1.0.20
   make -j 1
   make DESTDIR=$PKG install

   # Fix libtool files
   fix_la_files $PKG
}
